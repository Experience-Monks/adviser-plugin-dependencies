{
  "name": "adviser-plugin-dependencies",
  "version": "0.4.1",
  "description": "Adviser plugin to keep healthy dependecies",
  "main": "src/index.js",
  "contributors": [
    "Iran Reyes <iran.reyes@jam3.com>",
    "Nick Poisson <nick@jam3.com>"
  ],
  "scripts": {
    "test": "jest --watch",
    "test-ci": "jest --ci && npm run linters && npm run audit",
    "linters": "eslint './src/**/*.js'",
    "audit": "audit-ci --high",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=10.15.0",
    "npm": ">=6.5.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "audit-ci": "1.3.1",
    "babel-eslint": "10.0.1",
    "envinfo": "7.0.0",
    "eslint": "5.13.0",
    "eslint-config-jam3": "2.0.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.2.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4",
    "standard-version": "^7.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "__tests__/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Pre-commit checks...' && lint-staged",
      "pre-push": "echo 'Pre-push checks...' && npm run test-ci",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "peerDependencies": {
    "adviser": "^0.1.0"
  },
  "dependencies": {
    "adviser": "^0.5.1",
    "cross-spawn": "^6.0.5",
    "depcheck": "^0.8.0",
    "hyperlinker": "^1.0.0",
    "license-checker": "^25.0.1",
    "package-build-stats": "^6.1.2",
    "requireindex": "^1.2.0",
    "semver": "^6.3.0",
    "semver-diff": "^3.1.0",
    "terminal-link": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jam3/adviser-plugin-dependencies.git"
  },
  "bugs": {
    "url": "https://github.com/Jam3/adviser-plugin-dependencies/issues"
  },
  "homepage": "https://github.com/Jam3/adviser-plugin-dependencies#readme"
}
